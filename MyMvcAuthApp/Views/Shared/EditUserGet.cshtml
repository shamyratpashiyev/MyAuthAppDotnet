@model EditUserViewModel

<div class="edit-user-container">
    <h1>Edit User</h1>

    <form id="editUserForm" method="post" asp-action="EditUserPost">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.UserName)
            @Html.TextBoxFor(x => x.UserName)
            @Html.ValidationMessageFor(x => x.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Roles)
            <select multiple="multiple" asp-for="Roles">
                @foreach (var role in ViewBag.AllRoles)
                {
                    <option value="@role.Value">@role.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="save-button">Save Changes</button>
    </form>

    <div id="errorMessages" class="error-messages">
        <ul></ul>
    </div>
</div>

<style>
    /* Custom font */
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6; /* bg-gray-100 */
    }

    .edit-user-container {
        background-color: #ffffff; /* bg-white */
        padding: 1.5rem; /* p-6 */
        border-radius: 0.5rem; /* rounded-lg */
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-xl */
        width: 100%;
        max-width: 28rem; /* max-w-md */
    }

    h1 {
        font-size: 1.875rem; /* text-3xl */
        font-weight: 700; /* font-bold */
        color: #1f2937; /* text-gray-800 */
        margin-bottom: 1.5rem; /* mb-6 */
        text-align: center;
    }

    .form-group {
        margin-bottom: 1rem; /* mb-4 */
    }

    label {
        display: block;
        font-size: 0.875rem; /* text-sm */
        font-weight: 500; /* font-medium */
        color: #374151; /* text-gray-700 */
        margin-bottom: 0.5rem; /* mb-1 */
    }

    input[type="text"],
    input[type="email"],
    select[multiple] {
        width: calc(100% - 2rem); /* Full width minus padding */
        padding: 0.75rem 1rem; /* py-2 px-4 */
        border: 1px solid #d1d5db; /* border-gray-300 */
        border-radius: 0.375rem; /* rounded-md */
        font-size: 1rem; /* text-base */
        color: #1f2937; /* text-gray-800 */
        box-shadow: inset 0 1px 2px 0 rgba(0, 0, 0, 0.05); /* shadow-sm */
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    select[multiple]:focus {
        outline: none;
        border-color: #3b82f6; /* focus:border-blue-500 */
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25); /* focus:ring-blue-500 focus:ring-opacity-50 */
    }

    select[multiple] {
        height: auto; /* Adjust height based on content */
        min-height: 8rem; /* Minimum height for multiple select */
        padding: 0.5rem 1rem; /* Adjust padding for better appearance */
    }

    .save-button {
        background-color: #22c55e; /* bg-green-500 */
        color: #ffffff; /* text-white */
        font-weight: 600; /* font-semibold */
        padding: 0.75rem 1.5rem; /* py-3 px-6 */
        border-radius: 0.5rem; /* rounded-lg */
        border: none;
        cursor: pointer;
        width: 100%;
        margin-top: 1.5rem; /* mt-6 */
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .save-button:hover {
        background-color: #16a34a; /* hover:bg-green-600 */
        transform: scale(1.02);
    }

    .save-button:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(34, 197, 94, 0.5);
    }

    .error-messages {
        color: #ef4444; /* text-red-500 */
        font-size: 0.875rem; /* text-sm */
        margin-top: 1rem; /* mt-4 */
        padding: 0.75rem 1rem;
        border: 1px solid #fca5a5; /* border-red-300 */
        background-color: #fee2e2; /* bg-red-100 */
        border-radius: 0.375rem;
        display: none; /* Hidden by default */
    }

    .error-messages ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .error-messages li {
        margin-bottom: 0.25rem;
    }

    .error-messages li:last-child {
        margin-bottom: 0;
    }
</style>